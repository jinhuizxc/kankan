<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <include
        layout="@layout/common_head"/>
    <androidx.core.widget.NestedScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:padding="@dimen/dp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="显示在其他应用的上层（悬浮窗）"/>
                <TextView
                    android:background="@drawable/tv_bg_selector"
                    android:layout_marginLeft="@dimen/dp_0"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="未开启"
                    android:id="@+id/switch_suspension_window_tv"/>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/dp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="请勿开启（省点模式）"/>
                <TextView
                    android:visibility="gone"
                    android:background="@drawable/tv_bg_selector"
                    android:layout_marginLeft="@dimen/dp_0"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="未开启"
                    android:id="@+id/switch_save_electricity_tv"/>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/dp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="电池优化白名单"/>
                <TextView
                    android:background="@drawable/tv_bg_selector"
                    android:layout_marginLeft="@dimen/dp_0"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="未开启"
                    android:id="@+id/switch_battery_optimization_white_list_tv"/>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/dp_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="后台运行权限"/>
                <TextView
                    android:background="@drawable/tv_bg_selector"
                    android:layout_marginLeft="@dimen/dp_0"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="设置后台运行"
                    android:id="@+id/switch_background_operation_permission_tv"/>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_marginTop="@dimen/dp_8"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:contentPaddingBottom="@dimen/dp_8"
                    android:layout_margin="@dimen/dp_3"
                    app:cardCornerRadius="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/dp_200"
                                android:layout_height="@dimen/dp_300"
                                android:src="@drawable/guide1"/>
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="应用启动管理"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/dp_200"
                                android:layout_height="@dimen/dp_300"
                                android:src="@drawable/guide2"/>
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="找到当前应用"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/dp_200"
                                android:layout_height="@dimen/dp_300"
                                android:src="@drawable/guide3"/>
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="开关自启动"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/dp_200"
                                android:layout_height="@dimen/dp_300"
                                android:src="@drawable/guide4"/>
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="@dimen/dp_100"
                                android:layout_height="wrap_content"
                                android:text="打开允许自启动和打开允许后台活动"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/dp_200"
                                android:layout_height="@dimen/dp_300"
                                android:src="@drawable/guide5"/>
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="设置完毕"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </HorizontalScrollView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>